<div id="global-actions">
    <a href="#" id="search-toggle">
        <i class="far fa-magnifying-glass" aria-label="{% trans %}search.button_label{% endtrans %}"></i>
    </a>
    <feedback-form-toggle>
        <i class="far fa-comment-dots" aria-label="{% trans %}feedback.cta{% endtrans %}"></i>
    </feedback-form-toggle>
    {#
	<a href="#" id="notifications-toggle">
        <i class="far fa-bell"></i>
    </a>
	#}
    <div id="profile-toggle">
        <img src="{{ gravatar(app.user.email) }}" loading="lazy">
		<ul class="floating-dropdown reveal-on-hover text-center">
			<li><a href="{{ path('edit_profile') }}">{% trans %}global_actions.profile{% endtrans %}</a></li>
			{% if not self_hosting_mode %}
				<li><a href="{{ path('manage_subscription') }}">{% trans %}global_actions.susbcription{% endtrans %}</a></li>
			{% endif %}
			<li><a href="{{ path('logout') }}">{% trans %}global_actions.logout{% endtrans %}</a></li>
		</ul>
    </div>
</div>
